{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "../build",
    "baseUrl": "./",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "build", "pages"]
}
